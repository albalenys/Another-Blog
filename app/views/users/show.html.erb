<div class="container">
  <h1><%= @user.username %>'s Profile</h1>
  <p><img class="avatar" src="<%=@user.avatar %>"></p>

  <%= render "users/stats" %>

  <% if !@user.posts.empty? %>
    <h3>Blog Posts</h3>
    <% @user.posts.each do |post| %>
      <%= link_to "#{post.title}", post_path(post.id) %><br>
    <% end %>
  <% end %>
</div>
