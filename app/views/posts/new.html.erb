<div class="container">
  <h1>Create Post</h1>

  <% if logged_in? %>
    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %><br>
      <%= f.text_area :content %><br>
      <%= f.submit %>
    <% end %>
  <% else %>
    You must be <%= link_to "logged in", new_post_path %> to create a blog post.
  <% end %>
</div>
